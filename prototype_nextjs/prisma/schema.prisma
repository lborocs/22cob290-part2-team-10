generator client {
  provider = "prisma-client-js"
}

// sqlite doesn't support enums :/
datasource db {
  // provider = "mysql"
  // url      = env("DATABASE_URL")
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    String @id @default(uuid())
  email String @unique

  inviterId String?
  inviter   User?   @relation("Inviter", fields: [inviterId], references: [id])
  invited   User[]  @relation("Inviter")
}
